@model Cooperchip.ITDeveloper.Domain.Models.Paciente

@{
    ViewData["Title"] = "Exlusão de Paciente";
}

<vc:cabecalho titulo="Medical Management-Sys / Módulo Pacientes" subtitulo="Módulo de Administração de Pacientes" />

    <div class="row">
        <div class="panel panel-heading">
            <h3>Tem certeza que deseja excluir o Paciente ?</h3>
        </div>

        <div class="panel panel-body">

            <h4>Paciente</h4>
            <hr />

            <partial name="_delete_details" />

            <form asp-controller="Paciente" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Excluir Paciente" class="btn btn-danger" />
                <a asp-controller="Paciente" asp-action="Index" class="btn btn-info">Voltar a Lista</a>
            </form>
        </div>
    </div>

