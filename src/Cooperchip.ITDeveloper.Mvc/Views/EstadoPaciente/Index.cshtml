@model IEnumerable<Cooperchip.ITDeveloper.Domain.Models.EstadoPaciente>

@{
    ViewData["Title"] = "Lista de Estado dos Pacientes";
}

<vc:cabecalho titulo="Medical Management-Sys / Módulo Estado dos Pacientes"
              subtitulo="Módulo de Administração de Pacientes"></vc:cabecalho>

<div class="panel panel-info panel-controls">
    <div class="panel panel-heading">
        <h3>Lista de Estado dos Pacintes</h3>
    </div>

    <div class="panel panel-body">

        <p>
            <a class="btn btn-info" asp-controller="EstadoPaciente" asp-action="Create"><i class="fa fa-plus-circle"></i>&nbsp;&nbsp; Adicionar</a>
        </p>

        @* construindo a tabela com CRUD via TagHelper em TableGridTagHelper.cs *@
